{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "../..",
  "roots": ["<rootDir>/test/e2e"],
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "testMatch": ["**/*.test.ts", "**/*.spec.ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
