{
  "name": "purchase-cart-service",
  "version": "1.0.1",
  "author": "Claudio De Meo",
  "license": "ISC",
  "description": "RESTful service to create orders from a set of products.",
  "engines": {
    "node": ">=24",
    "npm": ">=11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdemeo92/purchase-cart-service.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit --coverageReporters=json-summary --coverageReporters=html",
    "test:integ": "jest --config test/integ/jest-integ.json",
    "test:e2e": "jest --config test/e2e/jest-e2e.json",
    "test:all": "npm test && npm run test:integ && npm run test:e2e",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.8.1",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
